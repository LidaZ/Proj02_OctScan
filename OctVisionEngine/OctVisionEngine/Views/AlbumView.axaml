<UserControl
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Width="200"
    d:DesignHeight="150"
    d:DesignWidth="150"
    mc:Ignorable="d"
    x:Class="OctVisionEngine.Views.AlbumView"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Spacing="5" Width="100">
        <Border ClipToBounds="True" CornerRadius="40">
            <Panel Background="CornflowerBlue">
                <Image Stretch="Uniform" Width="150" />
                <Panel Height="100">
                    <PathIcon
                        Data="{StaticResource midi_regular}"
                        Height="75"
                        Width="75" />
                </Panel>
            </Panel>
        </Border>
    </StackPanel>
</UserControl>
