<Window
    Height="720"
    Title="ImageGrab"
    Width="1080"
    mc:Ignorable="d"
    x:Class="OctVisionEngine.Views.Debug_ImageWindow"
    x:DataType="vm:Debug_ImageWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:OctVisionEngine.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top: Tool tab panel  -->
        <Border
            Background="LightGray"
            Grid.Row="0"
            Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button
                    Command="{Binding SelectFileCommand}"
                    Content="Open"
                    IsEnabled="{Binding !IsProcessing}"
                    Width="60" />

                <Button
                    Command="{Binding LoadFramesContinuouslyCommand}"
                    Content="Load"
                    IsEnabled="{Binding IsFileSelected}"
                    Width="60" />

                <Button
                    Background="red"
                    Command="{Binding PauseResumeCommand}"
                    Content="Pause"
                    Foreground="LightGray"
                    IsEnabled="{Binding IsProcessing}"
                    Name="PauseButton"
                    Width="50" />

                <Button
                    Content="Multi-mode"
                    IsEnabled="False"
                    Margin="50,0,0,0" />

                <Button
                    Background="Red"
                    Command="{Binding StopGrabFrameCommand}"
                    Content="Exit"
                    Foreground="White"
                    IsEnabled="{Binding IsProcessing}"
                    Name="ExitButton"
                    Width="50" />

            </StackPanel>
        </Border>

        <!--  Left: Image display panels  -->
        <DockPanel
            Background="LightGray"
            Grid.Row="1"
            HorizontalAlignment="Left"
            Margin="10,10"
            Width="750">
            <Image
                DockPanel.Dock="Right"
                Name="DisplayBscanImage"
                Source="{Binding ImagePanelDebug}"
                Stretch="None"
                VerticalAlignment="Center" />
            <Image
                DockPanel.Dock="Left"
                Name="DisplayEnfaceImage"
                Stretch="None"
                VerticalAlignment="Top" />

        </DockPanel>

        <DockPanel
            Background="LightGray"
            Grid.Row="1"
            HorizontalAlignment="Right"
            Margin="10,10"
            Width="300">
            <Slider
                DockPanel.Dock="Left"
                Height="30"
                Value="3"
                Width="120" />
            <Slider
                DockPanel.Dock="Right"
                Height="30"
                Value="256"
                Width="120" />
        </DockPanel>

    </Grid>


</Window>
